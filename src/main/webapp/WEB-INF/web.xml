<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
            http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>FoodTracking</display-name>
    <!--<welcome-file-list>-->
        <!--<welcome-file>/index</welcome-file>-->
    <!--</welcome-file-list>-->
    <filter>
        <filter-name>Charset Filter</filter-name>
        <filter-class>utils.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>Charset Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>servlets.RegistrationServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NewFood</servlet-name>
        <servlet-class>servlets.NewFoodServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NewFood</servlet-name>
        <url-pattern>/newfood</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FoodIntake</servlet-name>
        <servlet-class>servlets.FoodIntakeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FoodIntake</servlet-name>
        <url-pattern>/foodintake/*</url-pattern>
    </servlet-mapping>

    <!--<servlet>-->
        <!--<servlet-name>New</servlet-name>-->
        <!--<servlet-class>servlets.NewServlet</servlet-class>-->
    <!--</servlet>-->

    <!--<servlet-mapping>-->
        <!--<servlet-name>New</servlet-name>-->
        <!--<url-pattern>/foodintake/*</url-pattern>-->
    <!--</servlet-mapping>-->



    <servlet>
        <servlet-name>SelectFood</servlet-name>
        <servlet-class>servlets.SelectFoodServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SelectFood</servlet-name>
        <url-pattern>/selectFood</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>servlets.IndexServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>


</web-app>
